<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <ProgressBar android:id="@+id/progressBar"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_gravity="center"
        android:layout_marginTop="140dp"
        android:indeterminateTint="#3772E7"
        android:visibility="gone"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvFavoriteTrack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation="vertical"
        tools:listitem="@layout/track"
        android:layout_marginTop="16dp"
        tools:itemCount="5"
        android:foreground="?attr/selectableItemBackground"
        android:visibility="gone"
        />
    <ImageView
        android:id="@+id/icon_favorite"
        android:layout_marginTop="106dp"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/er_nothingfound"
        android:visibility="gone"
        />
    <TextView
        android:id="@+id/favorite_tab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dim_24dp"
        android:layout_marginEnd="@dimen/dim_24dp"
        android:layout_marginTop="16dp"
        android:layout_gravity="center"
        android:text="@string/mediaEmpty"

        android:textSize="24sp"
        android:visibility="gone"/>

</LinearLayout>