<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?background"
    tools:ignore="ExtraText">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarSearch"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dim_16dp"
        android:layout_marginTop="4dp"
        android:backgroundTintMode="?attr/colorPrimary"
        android:fontFamily="@font/ys_display_medium"
        android:gravity="center"
        app:buttonGravity="center_vertical"
        app:iconTint="@color/white"
        app:layout_constraintBottom_toTopOf="@id/imagePlayList"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/ic_arrow"
        app:title="@string/newPlaylists"
        app:titleMarginStart="@dimen/dim_24dp"
        app:titleTextColor="?attr/colorOnPrimary"
        app:contentInsetStart="0dp"
        app:contentInsetLeft="0dp"/>


    <ImageView
        android:id="@+id/imagePlayList"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="@dimen/dim_16dp"
        android:layout_marginTop="26dp"
        android:adjustViewBounds="true"
        android:background="@drawable/bkg_playlist"
        app:layout_constraintBottom_toTopOf="@id/NamePlayList"
        app:layout_constraintDimensionRatio="H,1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbarSearch" />


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/NamePlayList"
        style="@style/CustomOutlineBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:hint="Название*"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@id/et_description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imagePlayList">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/tiPlaylistName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/et_description"
        style="@style/CustomOutlineBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"

        android:layout_marginEnd="16dp"
        android:hint="Описание"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/NamePlayList">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/tiDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.google.android.material.textfield.TextInputLayout>

    <android.widget.Button
        android:id="@+id/b_create_playlist"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="@dimen/dim_16dp"
        android:layout_marginTop="170dp"
        android:layout_marginBottom="32dp"

        android:background="@drawable/bottom_switch"
        android:enabled="false"
        android:text="Создать"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>


