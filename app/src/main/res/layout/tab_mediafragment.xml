<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <Button
        android:id="@+id/createPlayList"
        style="@style/Refresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dim_24dp"
        android:backgroundTint="?attr/errorIconDrawable"
        android:text="@string/newPlaylists"
        android:textAllCaps="false"
        android:textColor="?attr/errorTextColor"
        android:textSize="@dimen/ts_14sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvPlayList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation="vertical"
        tools:listitem="@layout/track"
        android:layout_marginTop="16dp"
        tools:itemCount="5"
        android:foreground="?attr/selectableItemBackground"
        android:visibility="gone"
        />

    <ImageView
        android:id="@+id/icon_media"
        android:layout_marginTop="46dp"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/er_nothingfound"
        android:visibility="gone"
        />
    <TextView
        android:id="@+id/media_tab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="@dimen/dim_08dp"
        android:layout_marginEnd="@dimen/dim_02dp"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:text="@string/noPlaylists"
        android:textColor="?attr/errorTextAppearance"
        android:textSize="19sp"
        android:fontFamily="@font/ys_display_medium"
        android:visibility="gone"/>

</LinearLayout>