<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="8dp"
    android:foreground="?attr/selectableItemBackground">

    <ImageView
        android:id="@+id/iv_collection_image"
        android:layout_width="@dimen/dim_46dp"
        android:layout_height="@dimen/dim_46dp"
        android:background="?attr/colorPrimary"
        android:src="@drawable/placeholder"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tv_track_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dim_08dp"
        android:layout_marginTop="06dp"
        android:ellipsize="end"
        android:fontFamily="@font/ys_display_regular"
        android:singleLine="true"
        android:textColor="?attr/colorOnPrimary"
        android:textSize="@dimen/ts_16sp"
        app:layout_constraintEnd_toStartOf="@+id/buttonForward"
        app:layout_constraintStart_toEndOf="@id/iv_collection_image"
        app:layout_constraintTop_toTopOf="@id/iv_collection_image"
        tools:text="TrackNaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaame" />


    <TextView
        android:id="@+id/tv_artist_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="06dp"
        android:ellipsize="end"
        android:fontFamily="@font/ys_display_regular"
        android:maxLength="20"
        android:singleLine="true"
        android:textColor="?attr/colorPrimaryVariant"
        android:textSize="@dimen/ts_11sp"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintStart_toStartOf="@+id/tv_track_name"
        tools:text="BandNameeeeeeeeeeeeeeeeeeeeeeeee" />

    <ImageView
        android:id="@+id/ic_dot"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/ic_dot"
        app:layout_constraintBottom_toBottomOf="@id/tv_artist_name"
        app:layout_constraintEnd_toStartOf="@id/tv_duration"
        app:layout_constraintStart_toEndOf="@id/tv_artist_name"
        app:layout_constraintTop_toTopOf="@id/tv_artist_name"
        app:tint="?attr/colorPrimaryVariant" />

    <TextView
        android:id="@+id/tv_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dim_08dp"
        android:ellipsize="end"
        android:fontFamily="@font/ys_display_regular"
        android:singleLine="true"
        android:textColor="?attr/colorPrimaryVariant"
        android:textSize="@dimen/ts_11sp"
        app:layout_constraintBottom_toBottomOf="@id/tv_artist_name"
        app:layout_constraintStart_toEndOf="@id/ic_dot"
        app:layout_constraintTop_toTopOf="@id/tv_artist_name"

        tools:text="Duration" />

    <ImageView
        android:id="@+id/buttonForward"
        android:layout_width="@dimen/dim_24dp"
        android:layout_height="@dimen/dim_24dp"
        android:src="@drawable/ic_forward"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="?attr/colorPrimaryVariant" />

</androidx.constraintlayout.widget.ConstraintLayout>
