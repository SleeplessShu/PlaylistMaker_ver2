<?xml version="1.0" encoding="utf-8"?>

<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6E8EB"
    tools:context=".main.ui.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imagePlayList"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:adjustViewBounds="true"
                android:contentDescription="@string/playlistImage"
                android:scaleType="centerCrop"
                app:layout_constraintDimensionRatio="H,1:1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@drawable/placeholder" />

            <LinearLayout
                android:id="@+id/btnBack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/PlaylistFragment_padding_M"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@string/buttonBack"
                    android:src="@drawable/ic_arrow"
                    app:tint="@color/black" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvPlaylistName"
                style="@style/playlistHeader"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/PlaylistFragment_padding_M"
                android:layout_marginTop="@dimen/PlaylistFragment_padding_XL"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/imagePlayList"
                tools:text="Best Summer Parties" />


            <TextView
                android:id="@+id/tv_PlaylistDescription"
                style="@style/playlistText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/PlaylistFragment_padding_S"
                android:maxLength="200"
                app:layout_constraintEnd_toEndOf="@id/tvPlaylistName"
                app:layout_constraintStart_toStartOf="@id/tvPlaylistName"
                app:layout_constraintTop_toBottomOf="@id/tvPlaylistName"
                tools:text="Some fun playlist description" />


            <TextView
                android:id="@+id/tv_PlaylistDuration"
                style="@style/playlistText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/PlaylistFragment_padding_S"
                app:layout_constraintStart_toStartOf="@id/tv_PlaylistDescription"
                app:layout_constraintTop_toBottomOf="@id/tv_PlaylistDescription"
                tools:text="276 минут" />

            <ImageView
                android:id="@+id/ic_dot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_dot"
                app:layout_constraintBottom_toBottomOf="@id/tv_PlaylistDuration"
                app:layout_constraintEnd_toStartOf="@id/tvPlaylistTracksCount"
                app:layout_constraintStart_toEndOf="@id/tv_PlaylistDuration"
                app:layout_constraintTop_toTopOf="@id/tv_PlaylistDuration"
                app:tint="@color/black" />

            <TextView
                android:id="@+id/tvPlaylistTracksCount"
                style="@style/playlistText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@id/tv_PlaylistDuration"
                app:layout_constraintStart_toEndOf="@id/ic_dot"
                app:layout_constraintTop_toTopOf="@id/tv_PlaylistDuration"
                tools:text="197 треков" />

            <ImageView
                android:id="@+id/ic_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/PlaylistFragment_padding_M"
                android:src="@drawable/ic_share"
                app:layout_constraintStart_toStartOf="@id/tv_PlaylistDuration"
                app:layout_constraintTop_toBottomOf="@id/tv_PlaylistDuration"
                app:tint="@color/black" />

            <ImageView
                android:id="@+id/ic_more_options"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/PlaylistFragment_padding_M"
                android:src="@drawable/ic_more_options"
                app:layout_constraintBottom_toBottomOf="@id/ic_share"
                app:layout_constraintStart_toEndOf="@id/ic_share"
                app:layout_constraintTop_toTopOf="@id/ic_share"
                app:tint="@color/black"

                />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/PlaylistFragment_empty_space"
                app:layout_constraintTop_toBottomOf="@id/ic_share" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <View
        android:id="@+id/overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#99000000"
        android:visibility="gone" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/tracksBottomSheet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bottom_sheet_background"
        android:orientation="vertical"
        app:behavior_hideable="false"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

        <ImageView
            android:id="@+id/nice_thing"
            android:layout_width="50dp"
            android:layout_height="4dp"
            android:layout_marginTop="@dimen/PlaylistFragment_padding_S"
            android:src="@drawable/player_add_playlist"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/tracksBottomSheet"
            app:tint="?attr/colorTextInputBackground" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvTracksList"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="12dp"
            android:clipToPadding="false"
            android:paddingHorizontal="@dimen/PlaylistFragment_padding_S"
            android:scrollbars="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/nice_thing" />

        <ImageView
            android:id="@+id/ivNothingFound"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dim_40dp"
            android:src="@drawable/er_nothingfound"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/er_nothingfound" />

        <TextView
            android:id="@+id/tvNothingFound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/ys_display_medium"
            android:paddingTop="@dimen/dim_16dp"
            android:text="@string/emptyPlaylist"
            android:textAlignment="center"
            android:textColor="?attr/colorOnPrimary"
            android:textSize="@dimen/ts_20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ivNothingFound"
            tools:text="@string/emptyPlaylist" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/optionsBottomSheet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bottom_sheet_background"
        android:orientation="vertical"
        app:behavior_hideable="true"


        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

        <ImageView
            android:id="@+id/nice_thing2"
            android:layout_width="50dp"
            android:layout_height="4dp"
            android:layout_marginTop="@dimen/PlaylistFragment_padding_S"
            android:background="@drawable/player_add_playlist"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/optionsBottomSheet" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivPlaylistItemImage"
            android:layout_width="@dimen/playlistImageSize"
            android:layout_height="@dimen/playlistImageSize"
            android:layout_marginStart="@dimen/PlaylistFragment_padding_M"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="@dimen/PlaylistFragment_padding_S"
            android:scaleType="centerCrop"
            android:src="@drawable/test_rectangle"
            app:layout_constraintDimensionRatio="H,1:1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/nice_thing2"
            app:shapeAppearanceOverlay="@style/PlaylistItemPlayer" />

        <TextView
            android:id="@+id/tvPlaylistItemName"
            style="@style/playlistFragment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dim_106dp"
            android:paddingStart="@dimen/playlistItemPlayerPaddingHorizontal"
            android:paddingTop="@dimen/playlistItemPlayerPaddingVertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/ivPlaylistItemImage"
            app:layout_constraintTop_toTopOf="@id/ivPlaylistItemImage"
            tools:text="Best Summer Parties" />

        <TextView
            android:id="@+id/tvPlaylistItemTracksCount"
            style="@style/playlistFragment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/playlistItemPlayerPaddingHorizontal"
            android:paddingBottom="@dimen/playlistItemPlayerPaddingVertical"
            android:textSize="@dimen/PlaylistFragment_medium_text_size"
            app:layout_constraintBottom_toBottomOf="@id/ivPlaylistItemImage"
            app:layout_constraintStart_toStartOf="@id/tvPlaylistItemName"
            tools:text="197 треков" />

        <TextView
            android:id="@+id/playlistShare"
            style="@style/playlistFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/PlaylistFragment_padding_L"
            android:paddingHorizontal="@dimen/PlaylistFragment_padding_M"
            android:paddingVertical="@dimen/PlaylistFragment_padding_L"
            android:text="@string/playlistShare"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ivPlaylistItemImage" />

        <TextView
            android:id="@+id/playlistEdit"
            style="@style/playlistFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/PlaylistFragment_padding_M"
            android:paddingVertical="@dimen/PlaylistFragment_padding_L"
            android:text="@string/playlistEdit"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/playlistShare" />

        <TextView
            android:id="@+id/playlistDelete"
            style="@style/playlistFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/PlaylistFragment_padding_M"
            android:paddingVertical="@dimen/PlaylistFragment_padding_L"
            android:text="@string/playlistDelete"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/playlistEdit" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>