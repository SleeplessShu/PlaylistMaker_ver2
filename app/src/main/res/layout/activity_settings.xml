<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?attr/colorPrimary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/dim_16dp">


        <ImageView
            android:id="@+id/buttonBackToMain"
            style="@style/PM2_Header_Image"
            android:src="@drawable/icon_arrow" />

        <TextView
            style="@style/PM2_Header_Text"
            android:text="@string/Settings" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="@dimen/dim_24dp"
            android:paddingHorizontal="@dimen/dim_16dp">

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switchTheme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/switchDarkTheme"
                android:fontFamily="@font/ys_display_regular"
                android:textSize="@dimen/text_size_Base"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/textBlack"
                app:layout_constraintTop_toTopOf="@+id/textBlack"
                app:thumbTint="?attr/colorSwitcherBottom"
                app:trackTint="?attr/colorSwitcherTop" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:paddingVertical="@dimen/dim_24dp"
            android:paddingHorizontal="@dimen/dim_16dp">

            <TextView
                style="@style/SettingsStyleStart"
                android:text="@string/shareApp" />

            <ImageView
                android:id="@+id/shareApp"
                style="@style/SettingsStyleEnd"
                android:src="@drawable/icon_share" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:paddingVertical="@dimen/dim_24dp"
            android:paddingHorizontal="@dimen/dim_16dp">

            <TextView
                style="@style/SettingsStyleStart"
                android:text="@string/support" />

            <ImageView
                android:id="@+id/mailToSupport"
                style="@style/SettingsStyleEnd"
                android:src="@drawable/icon_support" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:paddingVertical="@dimen/dim_24dp"
            android:paddingHorizontal="@dimen/dim_16dp">

            <TextView
                style="@style/SettingsStyleStart"
                android:text="@string/agreement" />

            <ImageView
                android:id="@+id/toAgreementWeb"
                style="@style/SettingsStyleEnd"
                android:src="@drawable/icon_agreement" />
        </FrameLayout>
    </LinearLayout>
</LinearLayout>