<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="?attr/colorPrimary"
    android:layout_width="match_parent"
    android:gravity="center_horizontal"
    android:layout_height="match_parent"
    tools:context="com.practicum.playlistmaker_ver2.mediateka.ui.FavoritePlaylistsFragment">


    <Button
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/bNewPlaylist"
        style="@style/MediumButtonsStyle2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dim_24dp"
        android:paddingVertical="@dimen/dim_12dp"
        android:text="@string/newPlaylists" />

    <ImageView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/ivNothingFound"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dim_108dp"
        tools:src="@drawable/er_nothingfound"
        android:src="@drawable/er_nothingfound" />

    <TextView
        app:layout_constraintTop_toBottomOf="@id/ivNothingFound"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/ys_display_medium"
        android:text="@string/noPlaylists"
        android:textColor="?attr/colorOnPrimary"
        android:textSize="@dimen/ts_20sp"
        android:paddingTop="@dimen/dim_16dp"
        tools:text="@string/noPlaylists"
        android:textAlignment="center" />

</androidx.constraintlayout.widget.ConstraintLayout>