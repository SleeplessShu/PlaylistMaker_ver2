<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"

    android:background="?attr/colorPrimary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/dim_16dp">

        <ImageView
            style="@style/PM2_Header_Image"
            android:id="@+id/buttonBackToMain"
            android:src="@drawable/icon_arrow" />

        <TextView
            style="@style/PM2_Header_Text"
            android:text="@string/Search" />

    </LinearLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dim_16dp"
        app:boxCornerRadiusTopStart="@dimen/dim_08dp"
        app:boxCornerRadiusTopEnd="@dimen/dim_08dp"
        app:boxCornerRadiusBottomStart="@dimen/dim_08dp"
        app:boxCornerRadiusBottomEnd="@dimen/dim_08dp"
        app:startIconDrawable="@drawable/search_icon"
        app:startIconTint="?attr/colorTextInputFont"
        app:endIconMode="clear_text"
        app:endIconTint="?attr/colorTextInputFont"
        app:boxStrokeWidth="@dimen/dim_00dp"
        app:boxStrokeWidthFocused="@dimen/dim_00dp"
        app:hintEnabled="false">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/search_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="?attr/colorTextInputBackground"
            android:fontFamily="@font/ys_display_regular"
            android:gravity="center_vertical"
            android:hint="@string/hint_Search"
            android:inputType="text"
            android:paddingStart="@dimen/dim_40dp"
            android:paddingTop="@dimen/dim_16dp"
            android:paddingEnd="@dimen/dim_32dp"
            android:paddingBottom="@dimen/dim_16dp"
            android:textCursorDrawable="@null"
            android:textColor="@color/black"
            android:textColorHint="?attr/colorTextInputFont"
            android:textSize="@dimen/text_size_Base" />
    </com.google.android.material.textfield.TextInputLayout>
</LinearLayout>