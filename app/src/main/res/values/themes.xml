        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowLightNavigationBar">true</item>

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item> <!-- Кнопки -->
        <item name="colorPrimaryVariant">@color/grey</item>  <!-- Иконки -->
        <item name="colorOnPrimary">@color/black</item> <!-- Текст -->
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="colorSwitcherTop">@color/grey</item>
        <item name="colorSwitcherBottom">@color/greyLight</item>

        <item name="colorTextInputFont">@color/grey</item>
        <item name="colorTextInputBackground">@color/greyLight</item>

        <item name="colorButtonPlayerBackground">@color/black_0.25</item>
