<?xml version="1.0" encoding="utf-8"?>

<resources>

    <style name="PageHeaderStyle">
        <!-- <item name=""></item>*/ -->
    </style>

    <style name="ButtonsStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">?attr/colorSecondaryVariant</item>
        <item name="android:textSize">@dimen/text_size_Header</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="textAllCaps">false</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="cornerRadius">@dimen/dim_16dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/dim_08dp</item>
        <item name="iconTint">?attr/colorOnSecondary</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="PM2_Header_Image">
        <item name="android:layout_width">@dimen/dim_24dp</item>
        <item name="android:layout_height">@dimen/dim_24dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_margin">@dimen/dim_16dp</item>
        <item name="android:tint">?attr/colorOnPrimary</item>
    </style>

    <style name="PM2_Header_Text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:padding">@dimen/dim_16dp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/text_size_Header</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>


    <style name="SettingsStyle"><!--  -->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">@dimen/text_size_Base</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="iconTint">?attr/colorOnPrimary</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="SettingsStyleStart" parent="SettingsStyle">
        <item name="android:layout_gravity">start</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="SettingsStyleEnd" parent="SettingsStyle">
        <item name="android:layout_gravity">end</item>
    </style>
</resources>